rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function signedIn() {
      return request.auth != null;
    }

    function canAccessInternalFiles() {
      return signedIn();
    }

    match /archives/{allPaths=**} {
      allow read, write: if canAccessInternalFiles();
    }

    match /dossiers/{dossierId}/{allPaths=**} {
      allow read, write: if canAccessInternalFiles();
    }

    match /profiles/{userId}/{allPaths=**} {
      allow read: if signedIn();
      allow write: if signedIn() && request.auth.uid == userId;
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
